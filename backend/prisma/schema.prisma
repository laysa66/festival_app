generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id        Int      @id @default(autoincrement())
  type      String   @unique @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")
  users     User[]

  @@map("roles")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique @db.VarChar(255)
  passwordHash String   @map("password_hash") @db.VarChar(255)
  nom          String   @db.VarChar(100)
  prenom       String   @db.VarChar(100)
  valide       Boolean  @default(false)
  roleId       Int      @map("role_id")
  role         Role     @relation(fields: [roleId], references: [id])
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@map("users")
}

model Editeur {
  id           Int     @id @default(autoincrement())
  libelle      String
  exposant     Boolean @default(false)
  distributeur Boolean @default(false)
  logo         String?
  jeux         Jeu[]
  
  @@map("editeurs")
}

model TypeJeu {
  id      Int    @id @default(autoincrement())
  libelle String
  idZone  String?
  jeux    Jeu[]
  
  @@map("types_jeu")
}

model Mecanism {
  id          Int           @id @default(autoincrement())
  nom         String
  description String?
  jeux        JeuMecanism[]
  
  @@map("mecanismes")
}

model Jeu {
  id              Int           @id @default(autoincrement())
  libelle         String
  auteur          String?
  nbMinJoueur     Int?
  nbMaxJoueur     Int?
  notice          String?
  idEditeur       Int?
  idTypeJeu       Int?
  ageMin          Int?
  prototype       Boolean       @default(false)
  duree           Int?
  theme           String?
  description     String?
  image           String?
  videoRegle      String?
  editeur         Editeur?      @relation(fields: [idEditeur], references: [id])
  typeJeu         TypeJeu?      @relation(fields: [idTypeJeu], references: [id])
  mecanismes      JeuMecanism[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@map("jeux")
}

model JeuMecanism {
  id          Int       @id @default(autoincrement())
  idJeu       Int
  idMecanism  Int
  jeu         Jeu       @relation(fields: [idJeu], references: [id], onDelete: Cascade)
  mecanism    Mecanism  @relation(fields: [idMecanism], references: [id], onDelete: Cascade)
  
  @@unique([idJeu, idMecanism])
  @@map("jeux_mecanismes")
}
